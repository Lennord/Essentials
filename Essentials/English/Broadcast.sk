function EssentialsBroadcastCmd(s: sender, w: world, t: text):
	if {_s} has permission "essentials.*" or "essentials.broadcast.color" or "essentials.broadcast.*":
		broadcast "&7[&cAnnouncement&7] &6|-> &f%colored {_t}%" to world "%{_w}%"
		stop
	if {_s} doesn't have permission "essentials.*" or "essentials.broadcast.color" or "essentials.broadcast.*":
		broadcast "&7[&cAnnouncement&7] &6|-> &f%{_t}%" to world "%{_w}%"
		stop

command /broadcast [<text>] [<text>]:
	executable by: player and console
	aliases: essentials:broadcast, bc, essentials:bc
	description: &fEssentials command /broadcast !
	trigger:
		if sender = player:
			if arg 1 isn't set:
				send "" to player
				send "&c| &6Help:" to player
				send "" to player
				send "&7| &f/broadcast &f[&cname of world&f] &f[&ctext&f] &6| &7Send broadcast to all players !" to player
				stop
			else:
				if (arg 1 parsed as world) is set:
					if player has permission "essentials.*" or "essentials.broadcast.%arg 1 parsed as world%" or "essentials.broadcast.*":
						if arg 2 isn't set:
							send "" to player
							send "&c| &6Help:" to player
							send "" to player
							send "&7| &f/broadcast &f[&cname of world&f] &f[&ctext&f] &6| &7Send broadcast to all players !" to player
							stop
						else:
							EssentialsBroadcastCmd(player, arg 1 parsed as world, arg 2)
							send "&7[&cEssentials&7] &6You have send broadcast to world &c%arg 1 parsed as world% &6!" to player
							stop
					if player has permission "essentials.*" or "essentials.broadcast.%arg 1 parsed as world%" or "essentials.broadcast.*":
						send "&4| &cYou do not have permission to use this command !" to player
						stop
				else:
					send "&4| &cThe world &6%arg 1% &cis not exist !" to player
					stop
		if sender = console:
			send "&4| &cYou must be a player to use this command !" to console
			stop

on command "broadcast" or "essentials:broadcast" or "bc" or "essentials:bc":
	if sender = player:
		if player doesn't have permission "essentials.*" or "essentials.broadcast":
			cancel event
			send "&4| &cYou do not have permission to use this command !" to player
			stop